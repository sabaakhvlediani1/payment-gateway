{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Environment */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],

    /* Output */
    "sourceMap": true,

    /* Type Checking */
    "strict": true,

    /* Module Interop */
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
